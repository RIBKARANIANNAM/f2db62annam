extends layout

block content
  h1= title
  - var brand =results;
  - let creation = `dispatch(\"/brand/create\")`
  button.btn( class="btn-primary ml-1", onclick= creation) Create
  div(class="container-fluid")
    div(class="row")
      each item in brand
        - let destination = `dispatch(\"/brand/update?id=${item._id}\")`
        - let del = `dispatch(\"/brand/delete?id=${item._id}\")`
        - let detail = `dispatch(\"/brand/detail?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.BrandName}(#{item.Slogan}) is #{item.Price}
         button.btn( class="btn-primary ml-1", onclick= destination) Update  
         button.btn( class="btn-primary ml-1", onclick= detail) Detail View  
         button.btn( class="btn-primary ml-1", onclick= del) Delete  
  
  script. 
    function dispatch(path){ 
      window.location.href=path 
    } 
 