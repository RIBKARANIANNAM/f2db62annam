extends layout

block content
  h1= title
  - var brand =results;
  div(class="container-fluid")
    div(class="row")
      each item in brand
        div(class="col-sm-2" width="215px") BrandName:#{item.BrandName}, Slogan:#{item.Slogan}, Price:#{item.Price}
  br
  div(class="container-fluid")
    div(class="row")
    - for(var i=0;i<brand.length;i++) {
        div(class="col-sm-2" width="215px" onClick=`buy(${i+1})`) #{brand[i].BrandName}
    -}
  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }
